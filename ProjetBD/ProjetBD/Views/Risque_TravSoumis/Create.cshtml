@model ProjetBD.Risque_TravSoumis

@{
    ViewBag.Title = "Create";
}

<h2>Création</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    if (this.User.IsInRole("Admin"))
    {
        <div class="form-horizontal">
            <h4>Ajout de risque à un travailleur soumis</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Risque, "Risque :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.idRisque, null, htmlAttributes: new { @class = "form-control" })
                    @*@Html.DropDownList("idRisque", null, htmlAttributes: new { @class = "form-control" })*@
                    @Html.ValidationMessageFor(model => model.idRisque, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.idEmploi, "Emploi :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.idEmploi, null, htmlAttributes: new { @class = "form-control" })
                    @*@Html.DropDownList("idEmploi", null, htmlAttributes: new { @class = "form-control" })*@
                    @Html.ValidationMessageFor(model => model.idEmploi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ajouter" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    else
    { 
        <p>Vous n'avez pas l'autorisation pour accéder à ce contenu!</p>
    }
}

<div>
    @Html.ActionLink("Retour à la liste", "Index", "Emplois")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
